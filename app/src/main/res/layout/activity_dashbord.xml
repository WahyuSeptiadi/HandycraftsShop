<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.DashbordActivity">
    <RelativeLayout
        android:clipToPadding="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_dashbord"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/main_icon"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/titleDasboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"
            android:text="HandyCraft Shop"
            android:textSize="30dp"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_below="@id/img_dashbord" />

        <Button
            android:id="@+id/btn_login_dashbord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/titleDasboard"
            android:layout_centerHorizontal="true"
            android:elevation="4dp"
            android:text="LOGIN"
            android:background="@drawable/background_button"
            android:shadowColor="#000000" />

    </RelativeLayout>



</RelativeLayout>