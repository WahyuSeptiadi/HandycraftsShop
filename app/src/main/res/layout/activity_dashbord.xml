<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashbordActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_dashbord"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:src="@color/cardview_dark_background"
        android:layout_marginBottom="20dp"
        />

    <Button
        android:id="@+id/btn_login_dashbord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_dashbord"
        android:layout_centerInParent="true"
        android:text="LOGIN"
        />

    <Button
        android:id="@+id/btn_register_dashbord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_login_dashbord"
        android:layout_centerInParent="true"
        android:text="REGISTER"
        />
</RelativeLayout>