<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.LupaPassActivity"
    android:background="#ffff">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lupa Password ?"
        android:textAlignment="center"
        android:layout_marginTop="13dp"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#fff"/>

    <ImageView
        android:id="@+id/btn_lupa_password_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/ic_back"
        android:contentDescription="@string/todo" />

    <ImageView
        android:id="@+id/iv_post_photo"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/topBar"
        android:layout_weight="1"
        app:srcCompat="@drawable/forgot_pass_icon" />

    <TextView
        android:id="@+id/tv_lupa_password_text"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/iv_post_photo"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:text="Jangan khawatir, kami hanya membutuhkan alamat email yang telah Anda daftarkan" />

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_below="@id/tv_lupa_password_text"
        android:id="@+id/ll_login_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="vertical"
        android:background="@drawable/background_item"
        android:padding="18dp">

        <EditText
            android:id="@+id/et_lupa_password_email"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/background_edit_text"
            android:hint="Alamat email"
            android:layout_marginBottom="8dp"
            android:inputType="textEmailAddress"
            android:paddingTop="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingBottom="14dp"
            />

        <Button
            android:id="@+id/btn_lupa_password_reseting"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/background_button"
            android:textColor="@android:color/white"
            android:text="Reset Password"
            android:layout_weight="1"
            android:textSize="15sp"/>
    </LinearLayout>

</RelativeLayout>